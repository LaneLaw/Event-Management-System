<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <% const current = parseInt(req.query.page) || 1; %>

            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="/event/search/page=<%= Math.max(current-1, 1) %>">Previous</a>
                    </li>

                    <% for (i = 1; i <= count; i++) { %>
                    <li class="page-item">
                        <a class="page-link" href="/event/search/page=<%= i %>">
                            <%= i %></a>
                    </li>
                    <% } %>

                    <li class="page-item">
                        <a class="page-link" href="/event/search/page=<%= Math.min(current+1, count) %>">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row">


            <% model.forEach( function(model) { %>
            <div class="card col-lg-6">
                <div><a href="/event/view/<%= model.id %>"><img src="<%=model.imageurl%>" height=300 width=390></a><br><br>
                    <a href='/event/view/<%= model.id %>' style="font-size:30px;margin: 20px">
                        <%= model.eventname %></a>

                    <div style="margin: 20px">
                        <%= model.shortdescription%>
                    </div>
                </div>
            </div>

            <% }); %>
        </div>
    </div>
</div>
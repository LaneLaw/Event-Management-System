<div style="margin: 20px;">

</div>
<div>
    <button type="button" class="btn btn-info" onclick="reg('<%= event.id%>','<%=req.session.user_id%>')">registration</button>
</div>

<div>
    <button type="button" class="btn btn-danger" onclick="dereg('<%= event.id%>','<%=req.session.user_id%>')">Cancel</button>
</div>

<script>
    function reg(id,user_id) {
        
        window.location = "/user/"+ user_id +"/register/add/"+id;
            window.location = response.url;
       
    }
    function dereg(id,user_id) {
        window.location = "/user/"+ user_id +"/register/remove/"+id;
        alert("Operation complete!")
 
    }
</script>
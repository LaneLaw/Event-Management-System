<!--paginate.ejs-->

<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="navbar-brand" href="../">Home
                    <span class="sr-only">(current)</span>
                </a>
                <a class="nav-item nav-link" href="#">Search</a>
                <a class="nav-item nav-link" href="event/create">Create</a>
                <a class="nav-item nav-link disabled" href="../event">Admin</a>
            </div>
        </div>
    </nav>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Event Management System</h1>
            <p class="lead">HKBU Event Management System is web-based system for department and student societies to
                broadcast events and actvities as well as registration.</p>
        </div>
    </div>

    <% const current = parseInt(req.query.page) || 1; %>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="/event/paginate/?page=<%= Math.max(current-1, 1) %>">Previous</a>
            </li>

            <% for (i = 1; i <= count; i++) { %>
            <li class="page-item">
                <a class="page-link" href="/event/paginate/?page=<%= i %>">
                    <%= i %></a>
            </li>
            <% } %>

            <li class="page-item">
                <a class="page-link" href="/event/paginate/?page=<%= Math.min(current+1, count) %>">Next</a>
            </li>
        </ul>
    </nav>

    <div class="row">
       
            <% events.forEach( function(model) { %>
        <div class="card col-12 col-lg-4">
                <div><a href="event/view/<%= model.id %>"><img src="<%=model.imageurl%>" height=300 width=350></a><br><br>
            <a href='event/view/<%= model.id %>' style="font-size:30px;margin: 20px">
                <%= model.eventname %></a>
            
               <div style="margin: 20px"> <%= model.shortdescription%></div>
            </div>  
        </div>
        <% }); %>
        <form action="event/search">
            <label>Event name:</label>
            <input type="text" class="form-control" name="Event[eventname]" required>
        </form>
    </div>


</div>
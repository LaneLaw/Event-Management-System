<!--update.ejs-->

<form action="/event/update/<%=event.id %>" method="POST">

    <div class="row">
        <div class="col-sm-6">
            <!--Event Name-->
            <label>Event Name:</label>
            <input type="text" class="form-control" name="Event[eventname]" value="<%= event.eventname %>" required>
            <!--Short Description-->
            <label>Short Description:</label>
            <br>
            <textarea rows=6 type="text" class="form-control" name="Event[shortdescription]" required><%= event.shortdescription %></textarea>
            <!--Full Description-->
            <label>Full Description:</label>
            <br>
            <textarea rows=9 type="text" class="form-control" name="Event[fulldescription]" required><%= event.fulldescription %></textarea>
        </div>
        <div class="col-sm-6">
            <!--Image URL-->
            <label>Image URL:</label>
            <br>
            <input type="text" class="form-control" name="Event[imageurl]" value="<%= event.imageurl %>" required>
            <!--Organizer-->
            <label>Organizer:</label>
            <br>
            <select name="Event[organizer]" class="form-control" type="text" value="<%= event.organizer %> ">
                <option value="null">please pick one:</option>
                <option value="<%= event.organizer %> " selected hidden>
                    <%= event.organizer %>
                </option>
                <option value="o1">o1</option>
                <option value="o2">o2</option>
            </select>
            <!--Event Date-->
            <label>Event Date:</label>
            <div class="input-group date" data-provide="datepicker">
                <input type="text" class="form-control" name="Event[eventdate]" value="<%= event.eventdate %>" required>
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
            <!--Time-->
            <label>Time:</label>
            <br>
            <input type="text" class="form-control" name="Event[time]" value="<%= event.time %> " required>
            <!--Venue-->
            <label>Venue:</label>
            <br>
            <select name="Event[venue]" class="form-control" type="text" value="<%= event.venue %> ">
                <option value="null">please pick one:</option>
                <option value="<%= event.venue %> " selected hidden>
                    <%= event.venue %>
                </option>
                <option value="v1">v1</option>
                <option value="v2">v2</option>
            </select>
            <!--Time-->
            <label>Quota:</label>
            <br>
            <input type="number" class="form-control" name="Event[quota]" value="<%= event.quota %>" required>
            <!--highlight-->
            <br>
           
            <input id="hl" type="checkbox" name="Event[highlight]" value="<%=event.highlight%>" > Highlighted Event
            <br>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
<form action="/event/delete/<%=event.id %>" method="POST">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

